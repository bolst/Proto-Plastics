@page "/contact"

<Row RowColumns="RowColumns.Are2" Padding="Padding.Is4.OnY">
    <Column Border="Border.Is1.OnEnd" ColumnSize="ColumnSize.Is4.OnTablet.Is6.OnMobile"
        TextAlignment="TextAlignment.Center" Position="Position.Relative">
        <Div Position="Position.Absolute.Top.Is50.Start.Is50.Translate.Middle">
            <Row Padding="Padding.Is2.OnY">
                <Icon Name="IconName.MapMarkerAlt" IconSize="IconSize.x3" />
                <Lead TextOverflow="TextOverflow.Wrap">1880 Blackacre Dr, Oldcastle, ON N0R 1L0</Lead>
            </Row>
            <Row Padding="Padding.Is2.OnY">
                <Icon Name="IconName.Phone" IconSize="IconSize.x3" />
                <Lead TextOverflow="TextOverflow.Wrap">(519) 737-7838</Lead>
            </Row>
            <Row Padding="Padding.Is2.OnY">
                <Icon Name="IconName.Mail" IconSize="IconSize.x3" />
                <Lead TextOverflow="TextOverflow.Wrap">protop@mnsi.net</Lead>
            </Row>
        </Div>
    </Column>
    <Column Border="Border.Is1.OnStart" ColumnSize="ColumnSize.Is8.OnTablet.Is6.OnMobile">
        <Row><br></Row>

        <Row>
            <Heading>Contact Us</Heading>
        </Row>
        <Row>
            <Lead>Send us a message, and we will be sure to get back to you shortly.</Lead>
        </Row>
        <Row>
            <Form>
                <Validations @ref="validations" Mode="ValidationMode.Manual">
                    <Field>
                        <FieldBody>
                            <Validation Validator="@ValidationRule.IsNotEmpty">
                                <TextEdit Placeholder="Name" @bind-Text="@inputName" />
                            </Validation>
                        </FieldBody>
                    </Field>
                    <Field>
                        <FieldBody>
                            <Validation Validator="ValidationRule.IsEmail">
                                <TextEdit Placeholder="Email" @bind-Text="@inputEmail" />
                            </Validation>
                        </FieldBody>
                    </Field>
                    <Field>
                        <FieldBody>
                            <Validation Validator="ValidationRule.IsNotEmpty">
                                <MemoEdit Placeholder="Message" Rows="5" ReplaceTab TabSize="4"
                                    @bind-Text="@inputMessage" />
                            </Validation>
                        </FieldBody>
                    </Field>
                    <Field>
                        <Button Color="Color.Primary" Clicked="@OnClickedSubmit">Submit</Button>
                    </Field>
                </Validations>
            </Form>
        </Row>
        <Row><br></Row>
    </Column>
</Row>

@code {
    string inputName { get; set; } = "";
    ValidationStatus isNameValid { get; set; } = ValidationStatus.Success;
    string inputEmail { get; set; } = "";
    string inputMessage { get; set; } = "";

    Validations validations;

    async Task OnClickedSubmit()
    {
        if (await validations.ValidateAll())
        {

        }
    }
}