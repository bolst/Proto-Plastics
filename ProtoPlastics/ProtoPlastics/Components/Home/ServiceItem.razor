@namespace ProtoPlastics.Components

<Column ColumnSize="ColumnSize.Is4.OnTablet.Is12.OnMobile">
    @if (CustomIcon == null)
    {
        <Icon Name="@Icon" IconSize="IconSize.x4" />
    }
    else
    {
        <CustomIcon IconSource="@CustomIcon" />
    }
    <Lead Padding="Padding.Is4.FromTop">@ChildContent</Lead>
</Column>


@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public IconName Icon { get; set; }
    [Parameter] public string? CustomIcon { get; set; } = null;
}