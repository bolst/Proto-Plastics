@namespace ProtoPlastics.Components

@if (IconSource != null)
{
    <Figure Size="@IconSize" Margin="Margin.IsAuto">
        <FigureImage Source="@IconSource" AlternateText="@(IconSource.Replace(".png", ""))" />
    </Figure>
}

@code {
    [Parameter] public string? IconSource { get; set; }
    [Parameter] public FigureSize IconSize { get; set; } = FigureSize.Is64x64;
}